<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@mipmap/drawer_patt"
    android:orientation="vertical"
    android:paddingTop="@dimen/drawer_header_padding_top"
    android:paddingLeft="@dimen/drawer_header_padding_left"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:clickable="false">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="@dimen/avatar_img_size"
        android:layout_height="@dimen/avatar_img_size"
        android:src="@mipmap/avatar_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtitle_height"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/name_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_author"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_author"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_color"
            />
    </LinearLayout>

</RelativeLayout>